        <item name="android:textColor">@color/card_title_text</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_bottom_margin</item>
    </style>

    <!-- Subtitle for the cards in the main activity -->
    <style name="card_subtitle_text">
        <item name="android:textColor">@color/card_subtitle_text</item>
        <item name="android:textSize">@dimen/card_subtitle_text_size</item>
